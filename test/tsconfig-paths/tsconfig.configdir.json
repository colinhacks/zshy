{
  "extends": "./shared/tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@utils/*": ["utils/*"],
      "@components/*": ["components/*"],
      "@/config": ["config.ts"],
      "utils/*": ["utils/*"],
      "components/*": ["components/*"],
      "lib/*": ["lib/*"],
      "~/*": ["*"],
      "$config": ["config.ts"],
      "#helpers": ["utils/helpers.ts"],
      "@shared/*": ["${configDir}/../src/utils/*"],
      "~shared/*": ["${configDir}/../src/components/*"]
    }
  },
  "include": ["src/**/*"]
}