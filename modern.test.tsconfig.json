{
  "description": "Test: Modern TypeScript configuration with ES2022 target, bundler resolution, decorators, and nested output directories. Tests advanced TS features and complex path structures with rootDir set to project root.",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./output/js",
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "./output/types",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "output"]
}
